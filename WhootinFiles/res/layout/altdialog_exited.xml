<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exed_sample"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin ="12dp"
    android:background="@drawable/popup_white" 
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/exed_headr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_title_bar" >

        <TextView
            android:id="@+id/gal_list_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@string/pp_hdnm" />
    </RelativeLayout>

    <ListView
        android:id="@+id/exed_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/exed_txt_hd"
        android:layout_below="@+id/exed_headr"
        android:layout_margin= "5dp"
        android:divider="#CCCCCC"
        android:dividerHeight="1dip" >
    </ListView>

    <TextView
        android:id="@+id/exed_txt_hd"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_above="@+id/_txt_hd"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:cursorVisible="false"
        android:gravity="center"
        android:maxLines="10"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Do you want to overwrite?"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:textColor="#000000" />
    
    

    <TextView
        android:id="@+id/_txt_hd"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/exed_ll"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#000000" />
    

    <LinearLayout
        android:id="@+id/exed_ll"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal" >

        <Button
            android:id="@+id/exed_btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Cancel"
            android:textColor="#000000" />

        <Button
            android:id="@+id/exed_btn_ok"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Ok"
            android:textColor="#000000" />
    </LinearLayout>

</RelativeLayout>