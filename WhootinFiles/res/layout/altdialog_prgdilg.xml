<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exed_sample"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="12dp"
    android:background="@drawable/popup_upload_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/exed_headr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_upload_nav" >
    </RelativeLayout>

    <ListView
        android:id="@+id/pg_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/pg_txtrl"
        android:layout_below="@+id/exed_headr"
        android:layout_margin="5dp"
        android:divider="#CCCCCC"
        android:dividerHeight="1dip" >
    </ListView>

    <RelativeLayout
        android:id="@+id/pg_txtrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pg_path"
        android:background="@drawable/bg_pg" >

        <TextView
            android:id="@+id/pg_text"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:cursorVisible="false"
            android:gravity="center"
            android:maxLines="10"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/pg_hdnm"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textColor="#000000" />
    </RelativeLayout>

    <TextView
        android:id="@+id/pg_path"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_above="@+id/pg_txt"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        android:cursorVisible="false"
        android:gravity="center"
        android:maxLines="2"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textAppearance="?android:attr/textAppearanceSmallInverse"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/pg_txt"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_above="@+id/pg_seekbar"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:cursorVisible="false"
        android:gravity="center"
        android:maxLines="10"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textAppearance="?android:attr/textAppearanceSmallInverse"
        android:textColor="#000000" />

    <SeekBar
        android:id="@+id/pg_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:progressDrawable="@drawable/play_styled_progress"
        android:thumb="@drawable/line_thumb" />

</RelativeLayout>